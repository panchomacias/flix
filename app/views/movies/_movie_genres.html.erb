<% if @genres.present? %>
  <div class="w-full py-4">
    <h4 class="text-md font-semibold text-gray-700 mb-4">Genres</h4>
    <div class="flex flex-wrap gap-2">
      <% @genres.each do |genre| %>
        <p class="mb-4 pl-4 border-l-2 border-gray-100 text-sm"><%= genre.name %></p>
      <% end %>
    </div>
  </div>
<% end %>
