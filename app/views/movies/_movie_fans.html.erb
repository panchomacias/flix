<% if @fans.present? %>
  <div class="w-full py-4">
    <h4 class="text-md font-semibold text-gray-700 mb-4">Fans</h4>
    <div class="flex flex-wrap gap-2">
      <% @fans.each do |user| %>
        <%= link_to user.name,
        user_path(user),
        class:
          "mb-4 pl-4 border-l-2 border-gray-100 text-sm" %>
      <% end %>
    </div>
  </div>
<% end %>
