<%= form_with(model: movie, class: "w-full max-w-2xl px-4") do |f| %>
  <div class="p-4">
    <%= f.label :title, class: "block mb-2 font-medium text-gray-700" %>
    <%= f.text_field :title,
                 autofocus: true,
                 class:
                   "w-full border px-3 py-3 rounded-lg border-gray-300 shadow-sm focus:outline-none focus:border-cyan-500 focus:ring focus:ring-cyan-500" %>
  </div>
  <div class="p-4">
    <%= f.label :description, class: "block mb-2 font-medium text-gray-700" %>
    <%= f.rich_text_area :description,
                     class:
                       "w-full h-64 border px-3 py-3 rounded-lg border-gray-300 shadow-sm focus:outline-none focus:border-cyan-500 focus:ring focus:ring-cyan-500" %>
  </div>
  <div class="p-4">
    <%= f.label :rating, class: "block mb-2 font-medium text-gray-700" %>
    <%= f.text_field :rating,
                 class:
                   "w-full border px-3 py-3 rounded-lg border-gray-300 shadow-sm focus:outline-none focus:border-cyan-500 focus:ring focus:ring-cyan-500" %>
  </div>
  <div class="p-4">
    <%= f.label :released_on, class: "block mb-2 font-medium text-gray-700" %>
    <%= f.date_field :released_on,
                 class:
                   "w-full border px-3 py-3 rounded-lg border-gray-300 shadow-sm focus:outline-none focus:border-cyan-500 focus:ring focus:ring-cyan-500" %>
  </div>
  <div class="p-4">
    <%= f.label :total_gross, class: "block mb-2 font-medium text-gray-700" %>
    <%= f.number_field :total_gross,
                   class:
                     "w-full border px-3 py-3 rounded-lg border-gray-300 shadow-sm focus:outline-none focus:border-cyan-500 focus:ring focus:ring-cyan-500" %>
  </div>
  <div class="p-4">
    <%= f.submit class:
               "px-6 py-3 bg-cyan-600 text-white font-medium rounded-lg hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2" %>
  </div>
<% end %>
