<div class="flex justify-center items-center min-h-screen">
  <div class="max-w-2xl w-full">
    <ul class="p-6">
      <% @movies.each do |movie| %>
        <li class="flex items-start p-4 border-b border-gray-200 mb-4">
          <div class="flex-shrink-0">
            <%= image_tag movie.image_file_name, class: "w-20 h-auto rounded" %>
          </div>
          <div class="flex-grow ml-4">
            <div class="border-gray-200 pb-2 mb-2">
              <h1 class="text-xl font-bold text-gray-600 hover:underline hover:text-cyan-600"><%= link_to movie.title, movie_path(movie) %></h1>
              <div class="flex items-center mt-2">
                <span
                  class="
                    bg-cyan-100 text-cyan-600 text-sm font-medium px-2.5 py-0.5 rounded
                  "
                ><%= movie.rating %></span>
                <span class="ml-4 text-gray-600 text-sm"><%= year_of(movie) %></span>
              </div>
            </div>
            <div class="mb-3">
              <p class="text-gray-600 leading-relaxed"><%= truncate(movie.description.to_plain_text, length: 100, separator: " ") %></p>
            </div>
            <div class="text-sm text-gray-600">
              <p><%= total_gross(movie) %></p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

    <div class="px-6 pb-6">
      <%= link_to "Add Movie",
      new_movie_path,
      class: "bg-cyan-600 text-white px-4 py-2 rounded hover:bg-cyan-700" %>
    </div>
  </div>
</div>
