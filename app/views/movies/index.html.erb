<ul>
  <h1>Movies</h1>

  <% @movies.each do |movie| %>
    <li class="py-4">
      <strong><%= movie.title %></strong>
      (<%= movie.rating %>):
      <%= total_gross(movie) %>
      <p>
        <%= truncate(movie.description, length: 40, separator: "") %>
      </p>
      <p>
        <%= year_of(movie) %>
      </p>
    </li>
  <% end %>
</ul>
