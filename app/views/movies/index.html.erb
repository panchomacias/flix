<ul>
  <div class="py-4">
    <h1>Movies</h1>
  </div>

  <% @movies.each do |movie| %>
    <li class="py-4">
      <strong><%= movie.title %></strong>
      (<%= movie.rating %>):
      <%= number_to_currency(movie.total_gross, precision: 0) %>
      <p><%= movie.description %></p>
      <p><%= movie.released_on %></p>
    </li>
  <% end %>
</ul>
