<header class="bg-cyan-600 p-4 border-b border-cyan-800">
  <div class="container mx-auto flex justify-between items-center">
    <div>
      <%= link_to root_path do %>
        <%= image_tag "logo.png", class: "h-10" %>
      <% end %>
    </div>

    <nav class="flex items-center space-x-6">
      <% if current_user %>
        <%= link_to current_user.name,
        current_user,
        class: "text-gray-200 px-4 py-2 rounded hover:underline" %>
        <%= link_to "Account Settings",
        edit_user_path(current_user),
        class: "text-gray-200 px-4 py-2 rounded hover:underline" %>
      <% else %>
        <%= link_to "Sign In",
        signin_path,
        class: "bg-white text-cyan-600 px-4 py-2 rounded hover:bg-cyan-700" %>
        <%= link_to "Sign Up",
        signup_path,
        class: "bg-white text-cyan-600 px-4 py-2 rounded hover:bg-cyan-700" %>
      <% end %>
    </nav>
  </div>
</header>
