<header class="bg-cyan-600 p-4 border-b border-cyan-800">
  <div class="container mx-auto flex justify-between items-center">
    <div>
      <%= link_to root_path do %>
        <%= image_tag "logo.png", class: "h-10" %>
      <% end %>
    </div>
    <nav class="flex items-center space-x-4">
      <% if current_user %>
        <%= link_to current_user.name,
        current_user,
        class:
          "text-white hover:text-cyan-300 px-4 py-2 rounded-lg transition-colors duration-200" %>

        <%= link_to "Sign Out",
        session_path,
        class:
          "bg-cyan-600 hover:bg-cyan-700 text-white px-4 py-2 rounded-lg font-medium transition-colors duration-200",
        data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?",
        } %>
      <% else %>
        <%= link_to "Sign In",
        signin_path,
        class:
          "text-white hover:text-cyan-300 border border-white hover:border-cyan-300 px-4 py-2 rounded-lg font-medium transition-all duration-200" %>

        <%= link_to "Sign Up",
        signup_path,
        class:
          "bg-cyan-600 hover:bg-cyan-700 text-white px-4 py-2 rounded-lg font-medium transition-colors duration-200" %>
      <% end %>
    </nav>
  </div>
</header>
